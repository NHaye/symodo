
{# Show flash messages using the Bootstrap Alerts #}
{% macro flashMessagesAsBootstrapAlerts() %}
    {% for type, flashes in app.session.flashbag.all %}
        {% for flash in flashes %}
            <div class="alert alert-{{ type }} fade in">
                {{ flash }}
            </div>
        {% endfor %}
    {% endfor %}
{% endmacro %}